<UserControl x:Class="Brainchanger_App.Controls.MediaPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Brainchanger_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <MediaElement x:Name="mediaPlayercontrol" Source="/media/0.mp4" AutomationProperties.LiveSetting="Polite" Volume="100" LoadedBehavior="Play" UnloadedBehavior="Play">
        </MediaElement>
    </Grid>
</UserControl>
